{
	"name": "izumo",
	"version": "0.0.1",
	"description": "Izumo is the new API for dbots",
	"author": "@dbotsfun",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "biome check .",
		"lint:fix": "biome check . --apply-unsafe",
		"format": "biome format --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"update:i": "pnpm up --interactive",
		"update:f": "pnpm up --latest",
		"db:drop": "pnpm drizzle-kit drop",
		"db:push": "pnpm drizzle-kit migrate",
		"db:generate": "pnpm drizzle-kit generate --name",
		"postinstall": "pnpm lefthook install"
	},
	"dependencies": {
		"@apollo/server": "^4.10.4",
		"@knaadh/nestjs-drizzle-postgres": "^1.0.0",
		"@nest-lab/or-guard": "^2.4.1",
		"@nestjs/apollo": "^12.1.0",
		"@nestjs/axios": "^3.0.2",
		"@nestjs/common": "^10.3.8",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^10.3.8",
		"@nestjs/graphql": "^12.1.1",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.3.8",
		"@nestjs/terminus": "^10.2.3",
		"@nestjs/throttler": "^5.1.2",
		"@sapphire/bitfield": "^1.2.2",
		"@sapphire/utilities": "^3.16.2",
		"argon2": "^0.40.1",
		"axios": "^1.6.8",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"drizzle-orm": "^0.30.10",
		"graphql": "^16.8.1",
		"passport-jwt": "^4.0.1",
		"postgres": "^3.4.4",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.1",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.8",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.4.17",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.12.8",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.2",
		"cz-conventional-changelog": "^3.3.0",
		"drizzle-kit": "0.20.17-c347d7b",
		"git-cz": "^4.9.0",
		"jest": "^29.7.0",
		"lefthook": "^1.6.10",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	},
	"jest": {
		"moduleFileExtensions": ["js", "json", "ts"],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"pnpm": {
		"patchedDependencies": {
			"drizzle-orm@0.30.10": "patches/drizzle-orm@0.30.10.patch"
		}
	}
}
